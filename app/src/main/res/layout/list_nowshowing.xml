<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#626964">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="20dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="10dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="100dp"
                android:layout_height="150dp"
                android:id="@+id/movieImage"
                android:src="@drawable/avatar"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/movieName"
                    android:layout_marginTop="5dp"
                    android:text="Avatar: The Way of Water"
                    android:textStyle="bold"
                    android:textSize="22dp"
                    android:textColor="#ffffff"/>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/r_Date"
                        android:layout_marginTop="30dp"
                        android:text="Release Date: "
                        android:textStyle="italic"
                        android:textSize="18dp"
                        android:textColor="#ffffff"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/release"
                        android:layout_toRightOf="@+id/r_Date"
                        android:layout_marginTop="30dp"
                        android:text="15/12/2022"
                        android:textStyle="italic"
                        android:textSize="18dp"
                        android:textColor="#ffffff"/>

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/r_PG"
                        android:text="Rated "
                        android:textSize="18dp"
                        android:textColor="#ffffff"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/rate"
                        android:layout_toRightOf="@+id/r_PG"
                        android:text="PG-13"
                        android:textSize="18dp"
                        android:textColor="#ffffff"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/d_Time"
                        android:layout_toRightOf="@+id/rate"
                        android:layout_marginLeft="15dp"
                        android:text="Duration: "
                        android:textSize="18dp"
                        android:textColor="#ffffff"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/duration"
                        android:layout_toRightOf="@+id/d_Time"
                        android:text="3h12m"
                        android:textSize="18dp"
                        android:textColor="#ffffff"/>

                </RelativeLayout>

            </LinearLayout>

        </LinearLayout>

    </RelativeLayout>

</LinearLayout>